<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="NumericUpDown.SettingItem">
    <Setter Property="Width" Value="75" />
    <!--<Setter Property="HorizontalAlignment" Value="Right" />-->
  </Style>

  <Style Selector="ComboBox.SettingItem">
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <Style Selector="ToggleSwitch.SettingItem">
    <Setter Property="OnContent" Value="On" />
    <Setter Property="OffContent" Value="Off" />
  </Style>

  <Style Selector="Slider.SettingItem">
    <Setter Property="IsSnapToTickEnabled" Value="True" />
    <Setter Property="TickFrequency" Value="1" />
  </Style>

  <Style Selector="TextBlock.Value">
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="{DynamicResource SukiPrimaryColor}" />
  </Style>

  <Style Selector="TextBlock.Description">
    <Setter Property="FontSize" Value="11" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="TextBlock.Label">
    <Setter Property="FontSize" Value="12" />
    <Setter Property="Opacity" Value="0.6" />
  </Style>

  <Style Selector="TextBlock.SmallHeader">
    <Setter Property="FontSize" Value="10" />
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <Style Selector="Separator.Section">
    <Setter Property="Opacity" Value="0.1" />
  </Style>

  <Style Selector="Button.IconAction">
    <Setter Property="Width" Value="24" />
    <Setter Property="Height" Value="24" />
    <Setter Property="Padding" Value="0" />
  </Style>
</Styles>