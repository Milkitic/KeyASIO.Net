<Application
  x:Class="KeyAsio.App"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:suki="https://github.com/kikipoulet/SukiUI"
  RequestedThemeVariant="Default">
  <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="/Styles/Dimens.axaml" />
        <ResourceInclude Source="/Styles/DashboardSphereStyles.axaml" />
        <ResourceInclude Source="/Styles/DashboardSwitchStyles.axaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <suki:SukiTheme ThemeColor="Blue" />
    <!--<FluentTheme />-->
    <materialIcons:MaterialIconStyles />
    <Style Selector="suki|GlassCard">
      <Setter Property="IsAnimated" Value="False" />
    </Style>
    <Style Selector="ToggleSwitch">
      <Setter Property="Foreground" Value="{DynamicResource SukiText}" />
    </Style>
    <StyleInclude Source="/Styles/Controls.axaml" />
    <StyleInclude Source="/Styles/SettingItemStyles.axaml" />
    <StyleInclude Source="/Styles/StatBadgeStyles.axaml" />
  </Application.Styles>
</Application>