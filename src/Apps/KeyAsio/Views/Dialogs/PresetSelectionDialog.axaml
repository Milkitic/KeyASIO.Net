<UserControl
  x:Class="KeyAsio.Views.Dialogs.PresetSelectionDialog"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:converters="using:KeyAsio.Converters"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:lang="clr-namespace:KeyAsio.Lang"
  xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:services="using:KeyAsio.Services"
  xmlns:suki="https://github.com/kikipoulet/SukiUI"
  xmlns:vm="using:KeyAsio.ViewModels.Dialogs"
  d:DesignHeight="500"
  d:DesignWidth="900"
  x:DataType="vm:PresetSelectionDialogViewModel"
  mc:Ignorable="d">
  <UserControl.Resources>
    <converters:StringColorToBrushConverter x:Key="StringColorToBrushConverter" />
    <converters:EnumEqualityConverter x:Key="EnumEqualityConverter" />
  </UserControl.Resources>

  <UserControl.Styles>
    <Style Selector="suki|GlassCard.PresetCard">
      <Setter Property="RenderTransform" Value="scale(1)" />
      <Setter Property="IsInteractive" Value="True" />
      <Setter Property="BorderThickness" Value="2" />
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="Transitions">
        <Transitions>
          <TransformOperationsTransition
            Easing="CubicEaseOut"
            Property="RenderTransform"
            Duration="0:0:0.15" />
        </Transitions>
      </Setter>
    </Style>
    <Style Selector="suki|GlassCard.PresetCard:pointerover">
      <Setter Property="RenderTransform" Value="scale(1.05)" />
    </Style>
    <Style Selector="suki|GlassCard.PresetCard.Active">
      <Setter Property="IsOpaque" Value="True" />
      <Setter Property="IsInteractive" Value="False" />
      <Setter Property="Cursor" Value="Arrow" />
      <Setter Property="BorderBrush" Value="#0FFF" />
      <Style Selector="^:pointerover">
        <Setter Property="RenderTransform" Value="scale(1)" />
      </Style>
    </Style>
  </UserControl.Styles>

  <StackPanel Spacing="20">
    <TextBlock
      HorizontalAlignment="Center"
      Classes="h5"
      Opacity="0.6"
      Text="{I18N {x:Static lang:SRKeys.Preset_SelectionDescription}}"
      TextWrapping="Wrap" />

    <ItemsControl Margin="0,5,0,0" ItemsSource="{Binding Presets}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <UniformGrid
            HorizontalAlignment="Center"
            Columns="3"
            Rows="1" />
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate DataType="services:PresetModel">
          <suki:GlassCard
            Width="220"
            Margin="15"
            Padding="15"
            Classes="Surface PresetCard"
            Command="{Binding $parent[UserControl].((vm:PresetSelectionDialogViewModel)DataContext).SelectPresetCommand}"
            CommandParameter="{Binding}">
            <Classes.Accent>
              <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                <Binding Path="Mode" />
                <Binding Path="$parent[UserControl].((vm:PresetSelectionDialogViewModel)DataContext).CurrentPresetMode" TargetNullValue="{x:Null}" />
              </MultiBinding>
            </Classes.Accent>
            <Classes.Active>
              <MultiBinding Converter="{StaticResource EnumEqualityConverter}">
                <Binding Path="Mode" />
                <Binding Path="$parent[UserControl].((vm:PresetSelectionDialogViewModel)DataContext).CurrentPresetMode" TargetNullValue="{x:Null}" />
              </MultiBinding>
            </Classes.Active>
            <StackPanel Spacing="15">
              <!--  Icon and Title  -->
              <StackPanel
                HorizontalAlignment="Center"
                Orientation="Vertical"
                Spacing="10">
                <Border
                  Width="64"
                  Height="64"
                  Background="{Binding ColorOrKey, Converter={StaticResource StringColorToBrushConverter}, ConverterParameter=0.9}"
                  CornerRadius="50">
                  <materialIcons:MaterialIcon
                    Width="32"
                    Height="32"
                    Foreground="White"
                    Kind="{Binding Icon}" />
                </Border>
                <TextBlock
                  FontSize="18"
                  FontWeight="Bold"
                  Text="{Binding Title, Converter={x:Static converters:I18NConverter.Instance}}"
                  TextAlignment="Center"
                  TextWrapping="Wrap" />
              </StackPanel>

              <!--  Description  -->
              <TextBlock
                Opacity="0.7"
                Text="{Binding Description, Converter={x:Static converters:I18NConverter.Instance}}"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            </StackPanel>
          </suki:GlassCard>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>

    <Button
      HorizontalAlignment="Right"
      Command="{Binding CloseCommand}"
      Content="{I18N {x:Static lang:SRKeys.Common_Cancel}}"
      IsVisible="{Binding ShowCloseButton}" />
  </StackPanel>
</UserControl>
