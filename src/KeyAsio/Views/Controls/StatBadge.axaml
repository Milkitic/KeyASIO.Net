<UserControl
  x:Class="KeyAsio.Views.Controls.StatBadge"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  x:Name="Root"
  d:DesignHeight="50"
  d:DesignWidth="100"
  mc:Ignorable="d">
  <Panel>
    <Border
      Background="{DynamicResource SukiPrimaryColor}"
      CornerRadius="6"
      Opacity="0.06" />
    <StackPanel Margin="10,6">
      <TextBlock
        FontSize="10"
        Opacity="0.6"
        Text="{Binding Label, ElementName=Root}" />
      <ContentPresenter Content="{Binding Value, ElementName=Root}" FontWeight="DemiBold" />
    </StackPanel>
  </Panel>
</UserControl>
