<UserControl
  x:Class="KeyAsio.Views.Pages.SettingsPage"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:controls="using:KeyAsio.Views.Controls"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:suki="https://github.com/kikipoulet/SukiUI"
  xmlns:vm="using:KeyAsio.ViewModels"
  x:DataType="vm:MainWindowViewModel"
  mc:Ignorable="d">

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <ScrollViewer>
    <StackPanel Margin="20" Spacing="20">
      <suki:GlassCard>
        <suki:GroupBox Header="General">
          <StackPanel Margin="0,0,8,0" Spacing="10">
            <controls:SettingItem Header="Allow Multiple Instances" Icon="LayersTriple">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.General.AllowMultipleInstance}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>
          </StackPanel>
        </suki:GroupBox>
      </suki:GlassCard>

      <suki:GlassCard>
        <suki:GroupBox Header="Environment">
          <StackPanel Spacing="15">
            <TextBlock Text="osu! Folder Path" />
            <Grid ColumnDefinitions="*, Auto">
              <TextBox Margin="0,0,10,0" Text="{Binding AppSettings.Paths.OsuFolderPath, UpdateSourceTrigger=LostFocus}" />
              <Button
                Grid.Column="1"
                Width="35"
                Height="35"
                Padding="0"
                Classes="Flat"
                Click="OnBrowseOsuFolderClick">
                <materialIcons:MaterialIcon Kind="FolderOpen" />
              </Button>
            </Grid>
            <Separator Classes="Section" />
            <controls:SettingItem Header="Audio Cache Threads" Icon="Cpu64Bit">
              <controls:SettingItem.ActionContent>
                <NumericUpDown
                  Classes="SettingItem"
                  FormatString="#"
                  Maximum="16"
                  Minimum="1"
                  Value="{Binding AppSettings.Performance.AudioCacheThreadCount}" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>
          </StackPanel>
        </suki:GroupBox>
      </suki:GlassCard>

      <suki:GlassCard>
        <suki:GroupBox Header="Input &amp; Performance">
          <StackPanel Margin="0,0,8,0" Spacing="10">
            <controls:SettingItem
              Description="Uses low-latency key hooks when disabled"
              Header="Raw Input"
              Icon="KeyboardVariant">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.Input.UseRawInput}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>

            <controls:SettingItem
              Description="Performance Boost"
              Header="Enable AVX-512"
              Icon="RocketLaunch">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.Performance.EnableAvx512}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>

            <controls:SettingItem
              Description="Allow volume up to 150%"
              Header="Extended Volume"
              Icon="VolumeHigh">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.Audio.EnableExtendedVolume}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>

            <controls:SettingItem Header="Debug Console" Icon="Console">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.Logging.EnableDebugConsole}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>

            <controls:SettingItem Header="Error Reporting" Icon="Bug">
              <controls:SettingItem.ActionContent>
                <ToggleSwitch
                  IsChecked="{Binding AppSettings.Logging.EnableErrorReporting}"
                  OffContent="Off"
                  OnContent="On" />
              </controls:SettingItem.ActionContent>
            </controls:SettingItem>
          </StackPanel>
        </suki:GroupBox>
      </suki:GlassCard>

      <suki:GlassCard>
        <suki:GroupBox Header="About">
          <StackPanel Spacing="15">
            <Grid ColumnDefinitions="*,Auto">
              <StackPanel VerticalAlignment="Center">
                <TextBlock FontWeight="DemiBold" Text="Updates" />
                <TextBlock Classes="Description" IsVisible="{Binding UpdateService.NewVersion, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
                  <Run Text="Update available: v" /><Run Text="{Binding UpdateService.NewVersion}" />
                </TextBlock>
                <TextBlock
                  Classes="Description"
                  IsVisible="{Binding UpdateService.NewVersion, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                  Text="No updates available." />
              </StackPanel>
              <Button
                Grid.Column="1"
                Classes="Flat"
                Command="{Binding UpdateService.CheckForUpdatesCommand}"
                Content="Check for Updates" />
            </Grid>
            <Separator Classes="Section" />
            <Grid ColumnDefinitions="*,Auto">
              <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Copyright © 2022-2025 Milkitic (aka. yf_bmp)." />
                <TextBlock Classes="Description" Text="Licensed under GPL-3.0" />
              </StackPanel>
              <Button
                Grid.Column="1"
                Padding="8"
                Classes="Flat"
                Command="{Binding OpenUrlCommand}"
                CommandParameter="https://github.com/Milkitic/KeyASIO.Net">
                <materialIcons:MaterialIcon
                  Width="24"
                  Height="24"
                  Kind="Github" />
              </Button>
            </Grid>
          </StackPanel>
        </suki:GroupBox>
      </suki:GlassCard>
    </StackPanel>
  </ScrollViewer>
</UserControl>
