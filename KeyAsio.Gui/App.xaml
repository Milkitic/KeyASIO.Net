<Application
    x:Class="KeyAsio.Gui.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:KeyAsio.Gui.UserControls"
    xmlns:converters="clr-namespace:KeyAsio.Gui.Converters"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:KeyAsio.Gui"
    ShutdownMode="OnExplicitShutdown"
    Startup="App_OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/skindark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml" />
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/skindark.xaml" />

                <ResourceDictionary Source="pack://application:,,,/KeyAsio.Gui;component/ResourceDictionaries/Converters.xaml" />
                <ResourceDictionary Source="pack://application:,,,/KeyAsio.Gui;component/ResourceDictionaries/IconTemplates.xaml" />
                <ResourceDictionary Source="pack://application:,,,/KeyAsio.Gui;component/ResourceDictionaries/Buttons.xaml" />
                <ResourceDictionary Source="pack://application:,,,/KeyAsio.Gui;component/ResourceDictionaries/Sliders.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="PremiumGoldBrush" StartPoint="0,0" EndPoint="1,1">
                <!--<GradientStop Offset="0.0" Color="#FFEDC2" />-->
                <GradientStop Offset="0" Color="#FFD700" />
                <GradientStop Offset="1.0" Color="#D4AF37" />
            </LinearGradientBrush>
            
            <LinearGradientBrush x:Key="PremiumGoldBorderBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Offset="0.0" Color="#FFF5E1" />
                <GradientStop Offset="1.0" Color="#C5A028" />
            </LinearGradientBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
