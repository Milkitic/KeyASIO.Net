<userControls:DialogWindow
    x:Class="KeyAsio.Gui.Windows.LatencyGuideWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:KeyAsio.Shared.Models;assembly=KeyAsio.Shared"
    xmlns:userControls="clr-namespace:KeyAsio.Gui.UserControls"
    Title="Audio Offset Configuration"
    Width="450"
    Height="320"
    d:DataContext="{d:DesignInstance models:SharedViewModel,
                                     IsDesignTimeCreatable=False}"
    Background="{StaticResource RegionBrush}"
    Closed="LatencyGuideWindow_OnClosed"
    FontFamily="Segoe UI,微软雅黑"
    FontSize="14"
    ResizeMode="NoResize"
    TextBlock.Foreground="{StaticResource PrimaryTextBrush}"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Margin="25">
        <StackPanel HorizontalAlignment="Left">
            <TextBlock
                Margin="0,0,0,25"
                FontSize="21"
                FontWeight="Bold"
                Text="Audio Offset Calibration" />
            <TextBlock Margin="0,0,0,10" Text="Global Audio Latency Offset (ms)" />
            <StackPanel
                Margin="0,0,8,10"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Slider
                    Width="300"
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    AutoToolTipPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    Maximum="200"
                    Minimum="-200"
                    TickPlacement="None"
                    Value="{Binding AppSettings.RealtimeOptions.RealtimeModeAudioOffset}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="12"
                    Text="{Binding AppSettings.RealtimeOptions.RealtimeModeAudioOffset}" />
            </StackPanel>
            <TextBlock
                FontSize="12"
                Foreground="{StaticResource PrimaryTextBrush}"
                Text="Play a beatmap with &quot;Auto&quot; or &quot;No Fail&quot; mod enabled, then adjust the offset based on audio timing."
                TextWrapping="Wrap" />
            <TextBlock
                FontSize="12"
                Foreground="{StaticResource WarningBrush}"
                Text="Note: System background processes may slightly affect timing accuracy."
                TextWrapping="Wrap" />
        </StackPanel>

        <Button
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="btnConfirm_OnClick"
            Content="Apply Offset"
            FontWeight="Bold"
            Style="{StaticResource ButtonPrimary}"
            TextBlock.FontFamily="Consolas" />
    </Grid>
</userControls:DialogWindow>
